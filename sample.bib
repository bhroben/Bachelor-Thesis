	month = {aug},
	number = {2},
	pages = {75},
	publisher = {American Astronomical Society},
	title = {Simulations On A Moving Mesh: The Clustered Formation Of Population III Protostars},
	url = {https://doi.org/10.1088/0004-637x/737/2/75},
	volume = {737},
